#!/bin/sh

. bin/loader
. bin/load_phantom

if [ -z "${1}" ]; then
    eval "mix do compile, test \
        test/core_test.exs \
        test/yst_test.exs"
else
    res="$(find ./test/ -iname "${1}*.exs" 2>/dev/null)"
    if [ -n "${res}" ]; then
        eval "mix do test ${res}"
    else
        eval "mix do test ${*}"
    fi
fi
